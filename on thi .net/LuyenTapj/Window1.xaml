<Window x:Class="LuyenTapj.Window1"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:LuyenTapj"
        mc:Ignorable="d"
        Title="Window1" Height="450" Width="800">
    <Grid Loaded="HienThiTT">
        <DataGrid x:Name="dataBH" HorizontalAlignment="Center" Margin="10" Width="520" Height="250" AutoGenerateColumns="False">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Mã SP" Binding="{Binding MaSp}" Width="*"/>
                <DataGridTextColumn Header="Tên SP" Binding="{Binding TenSp}" Width="*"/>
                <DataGridTextColumn Header="Loại SP" Binding="{Binding TenLoai}" Width="*"/>
                <DataGridTextColumn Header="Số lượng bán" Binding="{Binding SoLuongMua}" Width="*"/>
                <DataGridTextColumn Header="Tổng tiền" Binding="{Binding TongTien}" Width="*"/>
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</Window>
